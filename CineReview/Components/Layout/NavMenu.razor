@inject NavigationManager Navigation
@inject IMovieDataProvider MovieDataProvider

<nav class="navbar navbar-expand-lg navbar-dark main-nav shadow-sm">
    <div class="container-xl py-3">
        <a class="navbar-brand d-flex align-items-center" href="">
            <span class="brand-icon me-2"></span>
            <span class="fw-semibold">CineReview</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav me-auto mb-3 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">Trang chủ</NavLink>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#showtimes" title="Tính năng đang phát triển">Lịch chiếu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#communities" title="Tính năng đang phát triển">Cộng đồng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#insights" title="Tin tức & hướng dẫn">Tin tức</a>
                </li>
            </ul>

            <div class="d-flex flex-column flex-lg-row gap-3 align-items-lg-center nav-actions">
                <form class="input-group input-group-sm nav-search" role="search" method="get" action="/movies/search">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input class="form-control" type="search" name="query" placeholder="Tìm phim, diễn viên..."
                        maxlength="100" value="@SearchTerm" />
                    <button class="btn btn-outline-light" type="submit">Tìm</button>
                </form>
                <a class="btn btn-primary btn-sm" href="#tickets">Đặt vé nhanh</a>
            </div>
        </div>
    </div>
</nav>

@code {
    private string _searchTerm = string.Empty;

    private string SearchTerm
    {
        get => _searchTerm;
        set => _searchTerm = value ?? string.Empty;
    }
}
@using System.Linq

<div class="movie-card card h-100 border-0 shadow-sm">
    <div class="movie-card__poster position-relative overflow-hidden rounded-4">
        <img src="@Movie.PosterUrl" alt="Poster @Movie.Title" class="w-100 h-100 object-fit-cover" loading="lazy" />
        @if (Movie.IsNowPlaying)
        {
            <span class="badge bg-danger-subtle text-danger-emphasis fw-semibold movie-card__status">Đang chiếu</span>
        }
        else if (!Movie.RequiresTicketVerification)
        {
            <span class="badge bg-success-subtle text-success-emphasis fw-semibold movie-card__status">Mở review tự do</span>
        }
    </div>
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-center mb-2 text-uppercase small fw-semibold text-secondary">
            <span>@Movie.ReleaseDate.ToString("dd MMM yyyy")</span>
            <span><i class="bi bi-star-fill text-warning me-1"></i>@Movie.CommunityScore.ToString("0.0")</span>
        </div>
        <h3 class="card-title h5 text-white">@Movie.Title</h3>
        <p class="card-text text-secondary text-truncate-3 mb-3">@Movie.Overview</p>
        <div class="d-flex flex-wrap gap-1 mb-3">
            @foreach (var genre in Movie.Genres.Take(3))
            {
                <span class="badge rounded-pill bg-dark-subtle text-secondary-emphasis">@genre</span>
            }
        </div>
        <div class="mt-auto">
            <a class="btn btn-outline-light btn-sm rounded-pill" href="@($"/movies/{Movie.Id}")">Xem chi tiết</a>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public MovieSummary Movie { get; set; } = default!;
}

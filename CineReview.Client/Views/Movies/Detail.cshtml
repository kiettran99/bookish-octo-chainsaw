                        <div class="col-12">
                            <div class="review-card skeleton-loading">
                                <div class="review-card__header">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="skeleton shimmer skeleton-avatar"></div>
                                        <div class="flex-grow-1">
                                            <div class="skeleton shimmer skeleton-text skeleton-text--short mb-2"></div>
                                            <div class="skeleton shimmer skeleton-text skeleton-text--xs"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="review-card__body">
                                    <div class="skeleton shimmer skeleton-text mb-2"></div>
                                    <div class="skeleton shimmer skeleton-text mb-2"></div>
                                    <div class="skeleton shimmer skeleton-text skeleton-text--medium"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="review-card skeleton-loading">
                                <div class="review-card__header">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="skeleton shimmer skeleton-avatar"></div>
                                        <div class="flex-grow-1">
                                            <div class="skeleton shimmer skeleton-text skeleton-text--short mb-2"></div>
                                            <div class="skeleton shimmer skeleton-text skeleton-text--xs"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="review-card__body">
                                    <div class="skeleton shimmer skeleton-text mb-2"></div>
                                    <div class="skeleton shimmer skeleton-text mb-2"></div>
                                    <div class="skeleton shimmer skeleton-text skeleton-text--medium"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="review-card skeleton-loading">
                                <div class="review-card__header">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="skeleton shimmer skeleton-avatar"></div>
                                        <div class="flex-grow-1">
                                            <div class="skeleton shimmer skeleton-text skeleton-text--short mb-2"></div>
                                            <div class="skeleton shimmer skeleton-text skeleton-text--xs"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="review-card__body">
                                    <div class="skeleton shimmer skeleton-text mb-2"></div>
                                    <div class="skeleton shimmer skeleton-text mb-2"></div>
                                    <div class="skeleton shimmer skeleton-text skeleton-text--medium"></div>
                                </div>
                            </div>
                    </div>
                </div>
                <nav class="review-pagination mt-4" data-review-pagination aria-label="Điều hướng review"></nav>
                <div class="text-center py-5 d-none" data-reviews-empty>
                    <i class="bi bi-chat-square-text text-secondary" style="font-size: 3rem;"></i>
                    <p class="text-secondary mt-3 mb-3">Chưa có review nào cho phim này.</p>
                    @* <button type="button" class="btn btn-primary" data-write-review>Viết review đầu tiên</button> *@
                </div>
            </div>
        </section>        
        <section class="detail-section" id="recommendations">
            <div class="container-xl">
                <div class="section-header">
                    <h2 class="h3 text-white mb-0">Gợi ý cho bạn</h2>
                    <span class="text-secondary">Những phim liên quan mà cộng đồng đang quan tâm.</span>
                </div>
                @if (profile.Recommended.Any())
                {
                    <div class="row g-4 cards-row-mobile">
                        @foreach (var movie in profile.Recommended.Take(4))
                        {
                            <div class="col-12 col-sm-6 col-lg-3">
                                @await Html.PartialAsync("_MovieCard", movie)
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info bg-info-subtle border-info-subtle text-info-emphasis" role="alert">
                        Chưa có gợi ý phù hợp. Bạn hãy khám phá thêm trên trang chủ.
                    </div>
                }
            </div>
        </section>
    </article>
    <div class="video-modal" data-video-modal hidden>
        <div class="video-modal__backdrop" data-video-close></div>
        <div class="video-modal__dialog" role="dialog" aria-modal="true" aria-label="Trình phát video">
            <div class="video-modal__body">
                <div class="ratio ratio-16x9 video-modal__player">
                    <iframe data-video-frame src="" title="Trailer" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share; fullscreen" playsinline webkit-playsinline allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_MovieReviewSheet")
}

@functions {
    private static string DetermineSupportTone(int score) => score switch
    {
        > 0 => "positive",
        < 0 => "negative",
        _ => "neutral"
    };

    private static string FormatSupportScore(int score) => score > 0 ? $"+{score}" : score.ToString();

    private static string MapCertificationToVietnamese(string certification)
    {
        if (string.IsNullOrWhiteSpace(certification) || certification == "Đang cập nhật")
        {
            return "Đang cập nhật";
        }

        return certification.ToUpperInvariant() switch
        {
            "G" => "P - Phổ biến (mọi lứa tuổi)",
            "PG" => "K - Dành cho trẻ em dưới 13 tuổi và có cha mẹ đi cùng",
            "PG-13" => "T13 - Cấm khán giả dưới 13 tuổi",
            "R" => "T16 - Cấm khán giả dưới 16 tuổi",
            "NC-17" or "NC17" => "T18 - Cấm khán giả dưới 18 tuổi",
            "NR" or "NOT RATED" => "Chưa phân loại",
            "PENDING" => "Đang cập nhật",
            _ => certification
        };
    }
}

@section Scripts {
    <script>
        (function () {
            // Smoothly load and reveal detail hero backdrop to avoid flicker on mobile
            var hero = document.querySelector('.detail-hero');
            if (!hero) return;

            var hasBackdrop = hero.getAttribute('data-has-backdrop');
            if (!hasBackdrop || hasBackdrop.toString().toLowerCase() !== 'true') return;

            var backdropEl = hero.querySelector('.detail-hero__backdrop');
            if (!backdropEl) return;

            var url = backdropEl.getAttribute('data-backdrop-url');
            if (!url) return;

            // Start hidden; when image fully loads, set background-image and fade-in
            var img = new Image();
            img.decoding = 'async';
            img.loading = 'eager';
            img.src = url;
            if (img.complete) {
                backdropEl.style.backgroundImage = "url('" + url + "')";
                backdropEl.classList.add('is-ready');
            } else {
                img.addEventListener('load', function () {
                    requestAnimationFrame(function () {
                        backdropEl.style.backgroundImage = "url('" + url + "')";
                        backdropEl.classList.add('is-ready');
                    });
                });
            }
        })();
    </script>
}

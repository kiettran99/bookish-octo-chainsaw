@using System.Linq
@model CineReview.Client.Features.Movies.MovieProfile?

@{
    var loadError = ViewData["LoadError"] as string;
    var profile = Model;
    var summary = profile?.Summary;
    var pageTitle = summary is null || string.IsNullOrWhiteSpace(summary.Title)
        ? "CineReview"
        : $"{summary.Title} | CineReview";
    ViewData["Title"] = pageTitle;
}

@if (!string.IsNullOrWhiteSpace(loadError))
{
    <section class="container-xl py-5 my-5 text-center">
        <div class="alert alert-danger bg-danger-subtle border-danger-subtle text-danger-emphasis" role="alert">
            @loadError
        </div>
    </section>
}
else if (profile is null)
{
    <section class="container-xl py-5 my-5 text-center">
        <h1 class="display-5 text-white mb-3">Không tìm thấy phim</h1>
        <p class="text-secondary mb-4">Có thể phim đã bị gỡ khỏi hệ thống hoặc chưa được thêm vào dữ liệu minh họa.</p>
        <a class="btn btn-outline-info" href="@Url.Action("Index", "Home")">Quay lại trang chủ</a>
    </section>
}
else
{
    var title = summary?.Title ?? "CineReview";
    var hasPoster = !string.IsNullOrWhiteSpace(summary?.PosterUrl);
    var hasBackdrop = !string.IsNullOrWhiteSpace(summary?.BackdropUrl);
    var posterUrl = hasPoster ? summary!.PosterUrl : "/images/no-poster.png";
    var certification = MapCertificationToVietnamese(profile.Certification);
    var runtimeLabel = profile.RuntimeMinutes > 0 ? $"{profile.RuntimeMinutes} phút" : "Đang cập nhật";
    
    // Ưu tiên logic hiển thị cho region VN
    // Check theo ngày phát hành VN so với UTC+7
    var vnNow = DateTime.UtcNow.AddHours(7); // UTC+7 for Vietnam
    var releaseDate = summary?.ReleaseDate ?? DateTime.MaxValue;
    var isReleasedInVN = releaseDate <= vnNow;
    var isNowPlaying = summary?.IsNowPlaying ?? false;
    
    // Logic hiển thị status:
    // 1. Đang chiếu: isNowPlaying && đã phát hành tại VN
    // 2. Sắp chiếu: chưa phát hành tại VN (ngày công chiếu > now)
    // 3. Đã phát hành: đã phát hành tại VN nhưng không còn đang chiếu
    string statusLabel;
    if (isNowPlaying && isReleasedInVN)
    {
        statusLabel = "Đang chiếu";
    }
    else if (!isReleasedInVN)
    {
        statusLabel = "Sắp chiếu";
    }
    else
    {
        statusLabel = "Đã phát hành";
    }
    
    var genresDisplay = summary?.Genres?.Any() == true ? string.Join(" / ", summary.Genres) : "Đang cập nhật";
    var releaseDateShort = summary?.ReleaseDate.ToString("dd MMM yyyy") ?? "Đang cập nhật";
    var releaseDateLong = summary?.ReleaseDate.ToString("dd/MM/yyyy") ?? "Đang cập nhật";
    var originalReleaseDate = summary?.OriginalReleaseDate;
    var shouldShowOriginalRelease = summary is not null && originalReleaseDate.HasValue && originalReleaseDate.Value.Date < summary.ReleaseDate.Date;
    var originalReleaseLong = shouldShowOriginalRelease ? originalReleaseDate!.Value.ToString("dd/MM/yyyy") : null;
    var communityScore = summary is not null && summary.CommunityScore > 0 ? summary.CommunityScore.ToString("0.0") : "Chưa có";
    var tagline = summary is not null && !string.IsNullOrWhiteSpace(summary.Tagline) ? summary.Tagline : null;
    var overview = summary?.Overview ?? string.Empty;

    <article class="movie-detail">
        <section class="detail-hero position-relative overflow-hidden" data-has-backdrop="@hasBackdrop">
            @if (hasBackdrop)
            {
                <div class="detail-hero__backdrop" data-backdrop-url="@summary!.BackdropUrl"></div>
            }
            else
            {
                <div class="detail-hero__backdrop"></div>
            }
            <div class="detail-hero__overlay"></div>
            <div class="container-xl position-relative">
                <div class="detail-hero__layout-mobile d-md-none">
                    <div class="detail-hero__poster-shell">
                        <div class="rounded-4 overflow-hidden shadow-lg detail-hero__poster @(hasPoster ? string.Empty : "detail-hero__poster--fallback")">
                            @if (hasPoster)
                            {
                                <img src="@posterUrl" alt="Poster @title" class="w-100 h-100 object-fit-cover" loading="lazy" />
                            }
                            else
                            {
                                <div class="detail-hero__poster-placeholder">
                                    <i class="bi bi-image"></i>
                                    <span>Poster đang cập nhật</span>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="detail-hero__mobile-body">
                        <div class="d-flex align-items-center gap-2 flex-wrap mb-3">
                            <span class="badge chip chip--primary">@releaseDateShort</span>
                            <span class="badge chip chip--muted">@certification</span>
                        </div>
                        <h1 class="display-5 fw-bold text-white mb-2">@title</h1>
                        @if (!string.IsNullOrWhiteSpace(tagline))
                        {
                            <p class="detail-hero__tagline text-light-emphasis mb-3">@tagline</p>
                        }
                        @if (!string.IsNullOrWhiteSpace(overview))
                        {
                            <p class="text-secondary mb-3">@overview</p>
                        }
                        <div class="detail-hero__actions d-flex flex-column gap-2 mb-4">
                            <a class="btn btn-primary btn-glow w-100" href="#watch-options">Mua vé ngay</a>
                        </div>
                        <div class="detail-hero__mobile-meta">
                            <div class="detail-hero__meta-chip">
                                <span class="label">Điểm cộng đồng</span>
                                <span class="value">@communityScore</span>
                            </div>
                            <div class="detail-hero__meta-chip">
                                <span class="label">Thời lượng</span>
                                <span class="value">@runtimeLabel</span>
                            </div>
                            <div class="detail-hero__meta-chip">
                                <span class="label">Tình trạng</span>
                                <span class="value">@statusLabel</span>
                            </div>
                            <div class="detail-hero__meta-chip">
                                <span class="label">Phát hành VN</span>
                                <span class="value">@releaseDateLong</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="detail-hero__layout d-none d-md-grid py-2">
                    <div class="detail-hero__poster-shell">
                        <div class="rounded-4 overflow-hidden shadow-lg detail-hero__poster @(hasPoster ? string.Empty : "detail-hero__poster--fallback")">
                            @if (hasPoster)
                            {
                                <img src="@posterUrl" alt="Poster @title" class="w-100 h-100 object-fit-cover" loading="lazy" />
                            }
                            else
                            {
                                <div class="detail-hero__poster-placeholder">
                                    <i class="bi bi-image"></i>
                                    <span>Poster đang cập nhật</span>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="detail-hero__body">
                        <div class="d-flex align-items-center gap-3 flex-wrap mb-3">
                            <span class="badge chip chip--primary">@releaseDateShort</span>
                            <span class="badge chip chip--muted">@certification</span>
                        </div>
                        <h1 class="display-4 fw-bold text-white mb-3">@title</h1>
                        @if (!string.IsNullOrWhiteSpace(tagline))
                        {
                            <p class="lead text-light-emphasis mb-4">@tagline</p>
                        }
                        @if (!string.IsNullOrWhiteSpace(overview))
                        {
                            <p class="text-secondary mb-4">@overview</p>
                        }
                        <div class="detail-hero__actions d-flex flex-wrap gap-3 mb-4">
                            <a class="btn btn-primary btn-glow" href="#watch-options">Mua vé ngay</a>
                        </div>
                        <div class="detail-hero__meta">
                            <div>
                                <span class="text-secondary">Điểm cộng đồng</span>
                                <span class="fw-semibold text-white">@communityScore</span>
                            </div>
                            <div>
                                <span class="text-secondary">Thời lượng</span>
                                <span class="fw-semibold text-white">@runtimeLabel</span>
                            </div>
                            <div>
                                <span class="text-secondary">Tình trạng</span>
                                <span class="fw-semibold text-white">@statusLabel</span>
                            </div>
                            <div>
                                <span class="text-secondary">Phát hành</span>
                                <span class="fw-semibold text-white">@releaseDateLong</span>
                            </div>
                        </div>
                    </div>
                    <div class="detail-hero__info-card d-none d-lg-block">
                        <h2 class="h6 text-secondary text-uppercase">Thông tin nhanh</h2>
                        <ul class="list-unstyled mb-0">
                            <li><span>Thể loại</span><span>@genresDisplay</span></li>
                            <li><span>Ngày phát hành (VN)</span><span>@releaseDateLong</span></li>
                            @if (!string.IsNullOrEmpty(originalReleaseLong))
                            {
                                <li><span>Ngày phát hành quốc tế</span><span>@originalReleaseLong</span></li>
                            }
                            <li><span>Thời lượng</span><span>@runtimeLabel</span></li>
                            <li><span>Chứng nhận</span><span>@certification</span></li>
                        </ul>
                    </div>
                </div>

                <div class="detail-hero__info-card detail-hero__info-card--mobile d-md-none">
                    <h2 class="h6 text-secondary text-uppercase">Thông tin nhanh</h2>
                    <ul class="list-unstyled mb-0">
                        <li><span>Thể loại</span><span>@genresDisplay</span></li>
                        <li><span>Ngày phát hành (VN)</span><span>@releaseDateLong</span></li>
                        @if (!string.IsNullOrEmpty(originalReleaseLong))
                        {
                            <li><span>Ngày phát hành quốc tế</span><span>@originalReleaseLong</span></li>
                        }
                        <li><span>Thời lượng</span><span>@runtimeLabel</span></li>
                        <li><span>Chứng nhận</span><span>@certification</span></li>
                    </ul>
                </div>
            </div>
        </section>


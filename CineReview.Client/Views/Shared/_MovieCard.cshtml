@model CineReview.Client.Features.Movies.MovieSummary

<div class="movie-card card h-100 border-0 shadow-sm">
	<div class="movie-card__poster position-relative overflow-hidden rounded-4">
		<a href="@Url.Action("Detail", "Movies", new { id = Model.Id })" class="d-block w-100 h-100">
			<img src="@Model.PosterUrl" alt="Poster @Model.Title" class="w-100 h-100 object-fit-cover" loading="lazy" style="cursor:pointer;" />
		</a>
		@if (Model.IsNowPlaying)
		{
			<span class="badge chip chip--danger movie-card__status">Đang chiếu</span>
		}
		else
		{
			<span class="badge chip chip--muted movie-card__status">Phim sắp chiếu</span>
		}
	</div>
	<div class="card-body d-flex flex-column">
		<div class="d-flex justify-content-between align-items-center mb-2 text-uppercase small fw-semibold text-secondary">
			<span>@Model.ReleaseDate.ToString("dd MMM yyyy")</span>
			<span><i class="bi bi-star-fill text-warning me-1"></i>@Model.CommunityScore.ToString("0.0")</span>
		</div>
		<h3 class="card-title h5 text-white">@Model.Title</h3>
		<p class="card-text text-secondary text-truncate-4 mb-3">@Model.Overview</p>
		<div class="d-flex flex-wrap gap-1 mb-3">
			@foreach (var genre in Model.Genres.Take(5))
			{
				<span class="badge chip chip--muted">@genre</span>
			}
		</div>
		<div class="mt-auto">
			<a class="btn btn-ghost btn-sm" href="@Url.Action("Detail", "Movies", new { id = Model.Id })">Xem chi tiết</a>
		</div>
	</div>
</div>
